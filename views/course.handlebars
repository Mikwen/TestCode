<!DOCTYPE html>

<header class="w3-container w3-teal w3-padding-xlarge">
    <h1>{{course}}</h1>
  <p> next class is Friday March 24th at 02:15pm in R1</p>
</header>

<div class="w3-row">
  <div class="w3-container w3-quarter">
    <div class="w3-container w3-padding-48" >
      <h2>Course material</h2>
      <ul class="w3-ul">
        {{fileButtons}}
      </ul>
    </div> 
        
  </div>
  <div class="w3-container w3-threequarter w3-padding-64">
    <div class= "w3-center"> 
        <embed id="fileViewer" width="100%" height="600pt" type="application/pdf" />
    </div>
  </div>
</div>

{{#if courseAdmin}}  
<h2>Upload new file</h2>
<form ref='uploadForm' 
  id='uploadForm' 
  action='/files/upload' 
  method='post' 
  encType="multipart/form-data">
    <input type="file" name="sampleFile" />
    <input type="hidden" name="course" value={{course}} />
    <input type='submit' value='Upload!' />
</form> 
{{/if}}
  
<script charset="utf-8">
function showFile(filename){
    var fileViewer=document.getElementById("fileViewer");
    var clone=fileViewer.cloneNode(true);
    clone.setAttribute('src',filename);
    fileViewer.parentNode.replaceChild(clone,fileViewer);
}
</script>
