<header class="w3-container w3-teal w3-padding-xlarge">
  <h1>Welcome, {{username}}.</h1>
</header>


<div class="w3-row">
  <div class="w3-container w3-quarter">
    <div class="w3-container w3-padding-48" >
      <h2>Courses</h2>
      <ul class="w3-ul">
        {{courseButtons}}
      </ul>
    </div> 
    <div>
        <input type="button" class="w3-button-floating w3-right w3-border w3-border-teal" value="+">
    </div>    
	
  </div>
  <div class="w3-container w3-threequarter w3-padding-64">
    <div class="w3-row"> 
        <div class = "w3-center w3-bar w3-display-container">
			<button onclick="cal.renderPrevMonth()" class="w3-button w3-teal w3-display-left"> &lt Previous</button>
			<h2 id="month_name" > Month-name </h2> 
			<button onclick="cal.renderNextMonth()" class="w3-button w3-teal w3-display-right">Next &gt</button>
		</div>
    <div class="w3-row w3-bottombar w3-border-teal">
        <div class="w3-col w3-padding-12" style="width:14.28%"><p class= "w3-center">Mon</p></div>
        <div class="w3-col w3-padding-12" style="width:14.28%"><p class= "w3-center">Tue</p></div>
        <div class="w3-col w3-padding-12" style="width:14.28%"><p class= "w3-center">Wed</p></div>
        <div class="w3-col w3-padding-12" style="width:14.28%"><p class= "w3-center">Thu</p></div>
        <div class="w3-col w3-padding-12" style="width:14.28%"><p class= "w3-center">Fri</p></div>
        <div class="w3-col w3-padding-12" style="width:14.28%"><p class= "w3-center">Sat</p></div>
        <div class="w3-col w3-padding-12" style="width:14.28%"><p class= "w3-center">Sun</p></div>
    </div>
    <div id="daysInGrid" class="w3-row"></div>
  </div>
  </div>
</div>

<script src="js/Calendar.js"></script>
<script>
	document.addEventListener('DOMContentLoaded', function() {	
		cal.render();
	});
</script>
